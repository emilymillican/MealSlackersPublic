<!DOCTYPE html>
<html>
<head>
	<!-- 'title' is passed from home.js during response.render fuc call --> 
	<title><%= title %></title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="../w3.css">
	<link rel="stylesheet" href="../theme-blue-grey.css">
	<link rel='stylesheet' href='../font-face.css'>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<style>
	html,body,h1,h2,h3,h4,h5 {font-family: "Open Sans", sans-serif}
	</style>
</head>
<body class="w3-theme-l5">

<!-- Navbar -->

<%- include ../layouts/navbar.ejs %>

<!-- Navbar on small screens -->
<div id="navDemo" class="w3-bar-block w3-theme-d2 w3-hide w3-hide-large w3-hide-medium w3-large">
  <a href="#" class="w3-bar-item w3-button w3-padding-large">Link 1</a>
  <a href="#" class="w3-bar-item w3-button w3-padding-large">Link 2</a>
  <a href="#" class="w3-bar-item w3-button w3-padding-large">Link 3</a>
  <a href="#" class="w3-bar-item w3-button w3-padding-large">My Profile</a>
</div>

<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">    
  <!-- The Grid -->
  <div class="w3-row">
    <!-- Left Column -->
    <div class="w3-col m3">
      <!-- Profile -->
      
      <%- include ../layouts/infobox.ejs %>

      <br>
      
      <!-- Accordion -->
      
      <%- include ../layouts/accordion.ejs %>

      <br>
      
      <!-- Interests --> 
           
      <%- include ../layouts/interests.ejs %>
     
      <br> 
    
    <!-- End Left Column -->
    </div>
    
    <!-- Middle Column -->
    <div class="w3-col m7">
    
      <div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card w3-round w3-white">
            <div class="w3-container w3-padding">
              <h2 class="w3" style="text-align: center; color:black;">Edit Account Settings</h2> 
            </div>
          </div>
        </div>
      </div>

      <div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card w3-round w3-white">
            <div class="w3-container w3-padding">
              
              <p>    
                  <h3>Name:</h3>
             </p>
             <br>
             <p>
             	<h3>Hometown:</h3>
             </p>
             <br>
             <p>    
                   <h3>Email Address:</h3>
             </p>
             <br>
             <h3>Major:</h3>
             <div id="table">
			<input type="checkbox" name ="Major" value="CS">CS
			<input type="checkbox" name ="Major" value="Engineering">Engineering
			<input type="checkbox" name ="Major" value="Physics">Physics
			<input type="checkbox" name ="Major" value="Math">Math
			<input type="checkbox" name ="Major" value="Arts and Science">Arts and Science
			<input type="checkbox" name ="Major" value="Business">Business
			<input type="checkbox" name ="Major" value="Music/Theater/Dance">Music/Theater/Dance
		</div>
		<br>
             <h3>Interests:</h3>
             <div id="table">
			<input type="checkbox" name ="Interests" value="CS">CS
			<input type="checkbox" name ="Interests" value="Engineering">Engineering
			<input type="checkbox" name ="Interests" value="Physics">Physics
			<input type="checkbox" name ="Interests" value="Math">Math
			<input type="checkbox" name ="Interests" value="Arts and Science">Arts and Science
			<input type="checkbox" name ="Interests" value="Business">Business
			<input type="checkbox" name ="Interests" value="Music/Theater/Dance">Music/Theater/Dance
		</div>
		<br>
			
			
			<h3>Food Preferences:</h3>
			<div id="table">
			<input type="checkbox" name="Food" value="Pizza">Pizza
			<input type="checkbox" name="Food" value="Sandwiches">Sandwiches
			<input type="checkbox" name="Food" value="Cookies">Cookies
			<input type="checkbox" name="Food" value="Snacks and Drinks">Snacks and Drinks
		</div>
		
		<br>
		
			
			<h3>Class</h3>
			<div id="table">
			<input type="radio" name="Class" value="Freshman" checked>Freshman<br>
			<input type="radio" name="Class" value="Sophomore" >Sophomore<br>
			<input type="radio" name="Class" value="Junior" >Junior<br>
			<input type="radio" name="Class" value="Senior" >Senior<br>
			<input type="radio" name="Class" value="Other" >Other<br>
		</div>
			
			<br>
		<h3>Additional Information</h3>
			<div id="table">
			<p>About Me</p>
			<textarea name="message" rows="4" cols="79"></textarea>
		</div>
			<br>
              <input type="Submit" value="Submit" style="background-color:#57707d; color:white; width: 150px; height: 40px;" >
            </div>
          </div>
        </div>
      </div>
      
      
      
    <!-- End Middle Column -->
    </div>
    
    <!-- Right Column -->
    <div class="w3-col m2">
      <div class="w3-card w3-round w3-white w3-center">
        <div class="w3-container">
          <p>Date/Time: <span id="datetime"></span></p>
          <script>
            var dt = new Date();
          document.getElementById("datetime").innerHTML = dt.toLocaleString();
          </script>
          
        </div>
      </div>
      <br>
      
      
      <br>
      
      
      
      <div class="w3-card w3-round w3-white w3-padding-16 w3-center">
        <p>ADS</p>
      </div>
      <br>
      
      <div class="w3-card w3-round w3-white w3-padding-32 w3-center">
        <p><i class="fa fa-bug w3-xxlarge"></i></p>
      </div>
      
    <!-- End Right Column -->
    </div>
    
  <!-- End Grid -->
  </div>
  
<!-- End Page Container -->
</div>
<br>


 
<script>
// Accordion
function myFunction(id) {
    var x = document.getElementById(id);
    if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
        x.previousElementSibling.className += " w3-theme-d1";
    } else { 
        x.className = x.className.replace("w3-show", "");
        x.previousElementSibling.className = 
        x.previousElementSibling.className.replace(" w3-theme-d1", "");
    }
}

// Used to toggle the menu on smaller screens when clicking on the menu button
function openNav() {
    var x = document.getElementById("navDemo");
    if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
    } else { 
        x.className = x.className.replace(" w3-show", "");
    }
}
</script>

</body>
</html> 
