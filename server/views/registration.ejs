	<style>
	body{
	background-color: #f5f7f8;
	}
	#table{margin-left:30%}

	</style>
		
</head>
	<body style="margin-top:0px; margin-left:0px; margin-right:0px">
	<%- include ./layouts/loginHeader.ejs %>
	<br>
        <h1 style="text-align:center; font-weight: normal; font-size: 35px">Welcome to Meal Slackers</h1>
        <h1 style=" font-weight: normal; font-size: 30px; margin-left:30%">Register:</h1>
     
	<br>
		
		<h4 style="margin-left:30%">Name</h4>
		<input type="text" name="Name" value="" placeholder="Enter name" size="75" style="margin-left:30%; min-height:40px">
		<br>
		<h4 style="margin-left:30%">Email Address</h4>
		<input type="email" name="Password" value="" placeholder="Enter email address" size="75" style="margin-left:30%; min-height:40px">
		<h4 style="margin-left:30%">Password</h4>
		<input type="Password" name="Email address" value="" placeholder="Password" size="75" style="margin-left:30%; min-height:40px">
		<br>
		<h4 style="margin-left:30%">Confirm Password</h4>
		<input type="Password" name="Password" value="" placeholder="Password" size="75" style="margin-left:30%; min-height:40px">
		<br>
		<h4 style="margin-left:30%">Major</h4>
		<div id="table">
			<input type="checkbox" name ="Interests" value="CS">CS
			<input type="checkbox" name ="Interests" value="Engineering">Engineering
			<input type="checkbox" name ="Interests" value="Physics">Physics
			<input type="checkbox" name ="Interests" value="Math">Math
			<input type="checkbox" name ="Interests" value="Arts and Science">Arts and Science
			<input type="checkbox" name ="Interests" value="Business">Business
			<input type="checkbox" name ="Interests" value="Music/Theater/Dance">Music/Theater/Dance
		</div>
		<br>
		<h4 style="margin-left:30%">Hometown</h4>
			<input type="text" name="Hometown" value="" placeholder="Enter hometown" size="75" style="margin-left:30%; min-height:40px">
			<br>
			<br>
			<h4 style="margin-left:30%">Interests</h4>
			<div id="table">
			<input type="checkbox" name ="Interests" value="CS">CS
			<input type="checkbox" name ="Interests" value="Engineering">Engineering
			<input type="checkbox" name ="Interests" value="Physics">Physics
			<input type="checkbox" name ="Interests" value="Math">Math
			<input type="checkbox" name ="Interests" value="Arts and Science">Arts and Science
			<input type="checkbox" name ="Interests" value="Business">Business
			<input type="checkbox" name ="Interests" value="Music/Theater/Dance">Music/Theater/Dance
		</div>
		<br>
			
			
			<h4 style="margin-left:30%">Food Preferences</h4>
			<div id="table">
			<input type="checkbox" name="Food" value="Pizza">Pizza
			<input type="checkbox" name="Food" value="Sandwiches">Sandwiches
			<input type="checkbox" name="Food" value="Cookies">Cookies
			<input type="checkbox" name="Food" value="Snacks and Drinks">Snacks and Drinks
			</div>
		
		<br>
		
			
			<h4 style="margin-left:30%">Class</h4>
			<div id="table">
			<input type="radio" name="Class" value="Freshman" checked>Freshman<br>
			<input type="radio" name="Class" value="Sophomore" >Sophomore<br>
			<input type="radio" name="Class" value="Junior" >Junior<br>
			<input type="radio" name="Class" value="Senior" >Senior<br>
			<input type="radio" name="Class" value="Other" >Other<br>
		</div>
			
			<br>
		<h4 style="margin-left:30%">Additional Information</h4>
		<div id="table">
			<p>About Me</p>
			<textarea name="message" rows="4" cols="75"></textarea>
		</div>
			<br>
			<br>
			<input type="Submit" value="Submit" style="background-color:#57707d; color:white; width: 150px; height: 40px; margin-left:30%; margin-bottom: 20px" >

			
</html>
